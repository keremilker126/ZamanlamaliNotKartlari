<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Yeni Not Ekle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Ekle" asp-controller="Note" method="post">
                        <div class="mb-3">
                            <label for="Başlik" class="form-label font-weight-bold">Not Başlığı</label>
                            <input type="text" class="form-control" id="Başlik" name="Başlik" placeholder="Başlık yazın..." required>
                        </div>

                        <div class="mb-3">
                            <label for="Icerik" class="form-label">Not İçeriği</label>
                            <textarea class="form-control" id="Icerik" name="Icerik" rows="4" placeholder="Notunuzu buraya yazın..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="KayitTarihi" class="form-label">Oluşturma Tarihi</label>
                                <input type="datetime-local" class="form-control" id="KayitTarihi" name="KayitTarihi" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="NeZamanaKadar" class="form-label">Bitiş Tarihi</label>
                                <input type="datetime-local" class="form-control" id="NeZamanaKadar" name="NeZamanaKadar">
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Notu Kaydet
                            </button>
                            <a href="/Note/Index" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>